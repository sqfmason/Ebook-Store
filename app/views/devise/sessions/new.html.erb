

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name),html: {class: "form-signin"}) do |f| %>
<div class="row">
   <div class="col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4 col-lg-4 col-lg-offset-4" style="background-color: #eee; padding-top: 20px; padding-bottom: 20px;">
  <form class="form-signin">
<h2 class="text-center">Log In</h2>
  
 	<%= f.input :email,required: false, autofocus: true, label: false, placeholder: "Email", input_html: {class: "form_control"}%>
    <%= f.input :password, required: false, label: false, placeholder: "password",input_html: {class: "form_control"} %>
   
  

  
 <%= f.button :submit, "Login", class: "btn btn-primary btn-block" %>
  
<% end %>

<%= render "devise/shared/links" %>
