

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "form-signin" }) do |f| %>
<h2 class= "text-center">Forgot password</h2>
  <%= f.error_notification %>
<div class="row">
   <div class="col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4 col-lg-4 col-lg-offset-4" style="background-color: #eee; padding-top: 20px; padding-bottom: 20px;">
  <form class="form-signin">
 
    <%= f.input :email, required: true, autofocus: true, label: false, placeholder: "email", input_html: {class: "form-control"}  %>
  

  
    <%= f.button :submit, "Send me reset password instructions", class: "btn btn-primary btn-block" %>
  
<% end %>

<%= render "devise/shared/links" %>
